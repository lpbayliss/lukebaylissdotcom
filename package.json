{
  "name": "lukebaylissdotcom",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:rss": "tsx ./scripts/rss.ts",
    "start": "next start",
    "check:formatting": "prettier . --check",
    "fix:formatting": "prettier . --write",
    "check:linting": "eslint .",
    "fix:linting": "eslint . --fix",
    "check:all": "pnpm run check:formatting && npm run check:linting",
    "fix:all": "pnpm run fix:formatting && npm run fix:linting",
    "process:content": "tsx ./scripts/process-staged-mdx.ts ./content/**/*.mdx",
    "gen:component": "tsx ./scripts/generate-component.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@chakra-ui/next-js": "^2.2.0",
    "@chakra-ui/react": "^2.8.2",
    "@chakra-ui/theme-tools": "^2.1.2",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@fec/remark-a11y-emoji": "^4.0.2",
    "@mdx-js/mdx": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "bright": "^0.8.5",
    "date-fns": "^3.4.0",
    "framer-motion": "^11.0.2",
    "gray-matter": "^4.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "marked": "^12.0.2",
    "next": "^14.0.1",
    "next-mdx-remote": "^4.4.1",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^3.0.0",
    "remark-toc": "^9.0.0",
    "rss": "^1.2.2"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.2",
    "@types/node": "20.11.28",
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22",
    "@types/eslint": "^8.56.5",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "8.57.0",
    "eslint-config-next": "13.2.4",
    "eslint-plugin-chakra-ui": "^0.11.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "tsx": "^4.7.1",
    "typescript": "5.4.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ],
    "content/**/*.{md,mdx}": [
      "prettier --write --ignore-unknown",
      "tsx ./scripts/process-staged-mdx.ts"
    ]
  },
  "packageManager": "pnpm@8.8.0"
}
