---
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  showNav?: boolean;
}

const {
  title,
  description = "Engineer and builder focused on dependable software with a healthy dose of curiosity.",
  ogImage,
  showNav = true,
} = Astro.props as Props;

const siteTitle = "Luke Bayliss";
const pageTitle = title ? `${title} · ${siteTitle}` : siteTitle;
const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined;
---

<html lang="en" class="bg-background text-foreground">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}
  </head>
  <body class="flex min-h-screen flex-col bg-background text-foreground antialiased">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:left-6 focus:top-6 focus:rounded focus:bg-background-muted focus:px-4 focus:py-2 focus:text-foreground"
    >
      Skip to content
    </a>
    <div class="mx-auto flex w-full max-w-4xl flex-1 px-4 py-10 sm:px-6 lg:px-8">
      <div class="flex w-full flex-col overflow-hidden rounded-xl border border-border bg-background-muted shadow-terminal">
        <header class="border-b border-border bg-background px-4 py-3 sm:px-6">
          <p class="text-xs uppercase tracking-[0.3em] text-foreground-muted">┌─&lt; lukebayliss.com &gt;─┐</p>
        </header>
        {showNav && <Navigation activePath={Astro.url.pathname} />}
        <main id="main-content" class="flex-1 px-4 py-6 sm:px-6 lg:px-8">
          <slot />
        </main>
        <Footer />
      </div>
    </div>
  </body>
</html>
